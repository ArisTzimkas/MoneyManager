<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.money_manager.ui.home.HomeFragment"
        android:label="Αρχική"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_transactions"
        android:name="com.example.money_manager.ui.transactions.TransactionFragment"
        android:label="Συναλλαγές"
        tools:layout="@layout/fragment_transactions" />

    <fragment
        android:id="@+id/nav_user"
        android:name="com.example.money_manager.ui.user.UserFragment"
        android:label="Λογαριασμός"
        tools:layout="@layout/fragment_user" />

    <fragment
        android:id="@+id/nav_schedule"
        android:name="com.example.money_manager.ui.scheduled.ScheduleFragment"
        android:label="Προγραμματισμός εξόδων"
        tools:layout="@layout/fragment_schedule" />

    <fragment
        android:id="@+id/nav_add_category"
        android:name="com.example.money_manager.ui.AddCategoryFragment"
        android:label="Προσθήκη κατηγορίας Εξόδων"
        tools:layout="@layout/fragment_add_category">

        <action
            android:id="@+id/action_go_to_add"
            app:destination="@+id/nav_add_category"/>
    </fragment>

    <fragment
        android:id="@+id/nav_search"
        android:name="com.example.money_manager.ui.search.SearchFragment"
        android:label="Αναζήτηση εξόδων"
        tools:layout="@layout/fragment_search" />


    <fragment
        android:id="@+id/nav_goal"
        android:name="com.example.money_manager.ui.user.GoalFragment"
        android:label="Ορισμός στόχου υπολοίπου"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/nav_about"
        android:name="com.example.money_manager.ui.about.AboutFragment"
        android:label="Στοιχεία εφαρμογής"
        tools:layout="@layout/fragment_about" />







    <action
        android:id="@+id/action_refresh"
        app:destination="@+id/nav_transactions"
        app:popUpTo="@id/nav_home"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/action_to_goal"
        app:destination="@+id/nav_goal"/>

    <action
        android:id="@+id/action_to_user"
        app:destination="@+id/nav_user"/>

</navigation>